{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "silly-app",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "reddit": {
      "asUser": [
        "SUBMIT_POST",
        "SUBMIT_COMMENT",
        "SUBSCRIBE_TO_SUBREDDIT"
      ]
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create Poll Hub",
        "description": "<% name %>",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/hub-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "silly_app_dev"
  }
}